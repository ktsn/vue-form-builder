mixin example(name)
  - const template = exampleTemplate(name)
  .example
    .example-code-wrapper
      pre.example-code
        code.language-html
          = template
      pre.example-code
        code.language-js
          = exampleScript(name)
    .example-result
      .example-template(id=`example-${name}`)
        != template
      script.
        ;(function() {
          var vm = #{transpiledExampleScript(name)};
          vm.$mount('#example-#{name}')
        })()
